FROM registry.cn-beijing.aliyuncs.com/iinti/jdk11-mysql57-base
WORKDIR /opt/teamTalk
COPY supervisord.conf /etc/supervisor/conf.d/supervisord.conf
COPY ./TeamTalkMain.zip /opt/teamTalk/
RUN unzip TeamTalkMain.zip
RUN cp /opt/teamTalk/assets/ddl.sql /docker-entrypoint-initdb.d/ddl.sql

ENV TZ=Asia/Shanghai
ENV MYSQL_ROOT_PASSWORD=teamTalk
ENV SPRING_DATASOURCE_USERNAME=root
ENV SPRING_DATASOURCE_PASSWORD=teamTalk
ENV SPRING_DATASOURCE_URL=jdbc:mysql://127.0.0.1:3306/teamTalk?useUnicode=true&characterEncoding=utf8&zeroDateTimeBehavior=convertToNull&useSSL=false&autoConnect=true
EXPOSE 8081
CMD ["/usr/bin/supervisord", "-n"]
